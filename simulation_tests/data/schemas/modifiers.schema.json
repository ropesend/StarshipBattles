{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://starship-battles/schemas/modifiers.json",
  "title": "Modifiers Schema v1.0",
  "description": "Schema for validating modifier definitions in Combat Lab test data",
  "type": "object",
  "required": ["_metadata", "modifiers"],
  "properties": {
    "_metadata": {
      "type": "object",
      "required": ["_schema_version", "_data_version"],
      "properties": {
        "_schema_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+$",
          "description": "Schema version (semver major.minor)"
        },
        "_data_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+$",
          "description": "Data version (semver major.minor)"
        },
        "_last_modified": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last modification"
        },
        "_description": {
          "type": "string",
          "description": "Optional description of this data file"
        }
      },
      "additionalProperties": false,
      "description": "Version metadata for schema/data compatibility tracking"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/modifier"
      },
      "description": "Array of stat modifiers"
    }
  },
  "definitions": {
    "modifier": {
      "type": "object",
      "required": ["id", "name", "type", "stat", "value"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]+$",
          "description": "Unique modifier identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable modifier name"
        },
        "type": {
          "type": "string",
          "enum": ["additive", "multiplicative", "override"],
          "description": "Modifier application type"
        },
        "stat": {
          "type": "string",
          "description": "Stat name to modify"
        },
        "value": {
          "type": "number",
          "description": "Modifier value"
        },
        "description": {
          "type": "string",
          "description": "Optional description of what this modifier does"
        },
        "conditions": {
          "type": "object",
          "description": "Optional conditions for when modifier applies"
        }
      },
      "additionalProperties": true
    }
  }
}
