{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://starship-battles/schemas/modifiers.json",
  "title": "Modifiers Schema",
  "description": "Schema for validating modifier definitions in Combat Lab test data",
  "type": "object",
  "required": ["modifiers"],
  "properties": {
    "modifiers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/modifier"
      },
      "description": "Array of stat modifiers"
    }
  },
  "definitions": {
    "modifier": {
      "type": "object",
      "required": ["id", "name", "type", "stat", "value"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]+$",
          "description": "Unique modifier identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable modifier name"
        },
        "type": {
          "type": "string",
          "enum": ["additive", "multiplicative", "override"],
          "description": "Modifier application type"
        },
        "stat": {
          "type": "string",
          "description": "Stat name to modify"
        },
        "value": {
          "type": "number",
          "description": "Modifier value"
        },
        "description": {
          "type": "string",
          "description": "Optional description of what this modifier does"
        },
        "conditions": {
          "type": "object",
          "description": "Optional conditions for when modifier applies"
        }
      },
      "additionalProperties": true
    }
  }
}
